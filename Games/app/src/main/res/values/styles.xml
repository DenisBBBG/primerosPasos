<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Games styles. -->
    <style name="GamesTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Games item styles. -->
    <style name="GamesItemTitle" parent="GamesTitle">
        <item name="android:textSize">@dimen/games_item_title_text_size</item>
    </style>

    <!-- Games data styles. -->
    <style name="GamesDataTitle" parent="GamesTitle">
        <item name="android:textSize">@dimen/games_data_title_text_size</item>
    </style>

    <style name="GameDataText">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/games_data_text_margin_top</item>
        <item name="android:background">@color/game_data_text_background</item>
        <item name="android:textSize">@dimen/games_data_text_text_size</item>
    </style>

</resources>