<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/emaWhite</item>
        <item name="emaActionBarStyle">@style/ActionBarStyle</item>
        <item name="emaAppBarLayoutStyle">@style/AppBarLayoutStyle</item>
    </style>

    <style name="ActionBarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="AppBarLayoutStyle">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Games styles. -->
    <style name="GamesTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Games item styles. -->
    <style name="GamesItemTitle" parent="GamesTitle">
        <item name="android:textSize">@dimen/games_item_title_text_size</item>
    </style>

    <!-- Games data styles. -->
    <style name="GamesDataTitle" parent="GamesTitle">
        <item name="android:textSize">@dimen/games_data_title_text_size</item>
    </style>

    <style name="GameDataText">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/games_data_text_margin_top</item>
        <item name="android:background">@color/game_data_text_background</item>
        <item name="android:textSize">@dimen/games_data_text_text_size</item>
    </style>
</resources>
